{
  "name": "BIOSTool",
  "displayName": "BIOS Tool Integration",
  "description": "VS Code integration for HPE Server BIOS Tool (bt)",
  "version": "0.0.1",
  "icon": "biostool.ico",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/hpbuild.bat",
    "workspaceContains:**/hpbuild.sh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "BIOSTool.init",
        "title": "BT: Init",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "BIOSTool.build",
        "title": "BT: Build",
        "icon": "$(gear)"
      },
      {
        "command": "BIOSTool.clean",
        "title": "BT: Clean",
        "icon": "$(trash)"
      },
      {
        "command": "BIOSTool.status",
        "title": "BT: Status"
      },
      {
        "command": "BIOSTool.switch",
        "title": "BT: Switch"
      },
      {
        "command": "BIOSTool.pull",
        "title": "BT: Pull"
      },
      {
        "command": "BIOSTool.push",
        "title": "BT: Push"
      },
      {
        "command": "BIOSTool.merge",
        "title": "BT: Merge"
      },
      {
        "command": "BIOSTool.select",
        "title": "BT: Select Repository"
      },
      {
        "command": "BIOSTool.move",
        "title": "BT: Move Worktree"
      },
      {
        "command": "BIOSTool.top",
        "title": "BT: Go to Top"
      },
      {
        "command": "BIOSTool.config",
        "title": "BT: Config",
        "icon": "$(settings-gear)"
      },
      {
        "command": "BIOSTool.selectPlatform",
        "title": "BT: Select Platform"
      },
      {
        "command": "BIOSTool.refreshPlatforms",
        "title": "Refresh Platforms",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "biosToolExplorer",
          "title": "BIOS Tool",
          "icon": "$(wrench)"
        }
      ]
    },
    "views": {
      "biosToolExplorer": [
        {
          "id": "biosToolPlatforms",
          "name": "Commands",
          "icon": "$(circuit-board)",
          "contextualTitle": "BIOS Commands"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "BIOSTool.refreshPlatforms",
          "when": "false"
        },
        {
          "command": "BIOSTool.selectPlatform",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "BIOSTool.refreshPlatforms",
          "when": "view == biosToolPlatforms",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "BIOSTool.build",
          "when": "view == biosToolPlatforms && viewItem == platform",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle-bt && npm run package",
    "bundle-bt": "powershell -ExecutionPolicy Bypass -File bundle-bt.ps1",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
